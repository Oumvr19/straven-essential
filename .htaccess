# ====================
# PERFORMANCE WEB - STRAVEN ESSENTIAL
# Configuration Apache pour Core Web Vitals
# ====================

# Activer le moteur de réécriture
<IfModule mod_rewrite.c>
    RewriteEngine On
</IfModule>

# ====================
# COMPRESSION GZIP/BROTLI
# Réduction de 70-90% de la taille des fichiers texte
# ====================
<IfModule mod_deflate.c>
    # Activer la compression pour les types de fichiers texte
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE image/svg+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/atom+xml
    AddOutputFilterByType DEFLATE font/ttf
    AddOutputFilterByType DEFLATE font/otf
    AddOutputFilterByType DEFLATE application/font-woff
    AddOutputFilterByType DEFLATE application/font-woff2
    
    # Désactiver pour les anciens navigateurs
    BrowserMatch ^Mozilla/4 gzip-only-text/html
    BrowserMatch ^Mozilla/4\.0[678] no-gzip
    BrowserMatch \bMSIE !no-gzip !gzip-only-text/html
</IfModule>

# Brotli (compression supérieure, si disponible)
<IfModule mod_brotli.c>
    AddOutputFilterByType BROTLI_COMPRESS text/html text/css text/javascript
    AddOutputFilterByType BROTLI_COMPRESS application/javascript application/json
    AddOutputFilterByType BROTLI_COMPRESS image/svg+xml
</IfModule>

# ====================
# MISE EN CACHE (Cache Control)
# Améliore drastiquement les visites répétées
# ====================
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresDefault "access plus 1 month"
    
    # HTML (courte durée - contenu dynamique)
    ExpiresByType text/html "access plus 0 seconds"
    
    # CSS et JavaScript
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType text/javascript "access plus 1 year"
    
    # Images
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/avif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # Fonts
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/otf "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    
    # Manifests et autres
    ExpiresByType application/manifest+json "access plus 1 week"
    ExpiresByType text/xml "access plus 0 seconds"
</IfModule>

# Headers de cache alternatifs (si mod_expires n'est pas disponible)
<IfModule mod_headers.c>
    # Images, CSS, JS - cache 1 an
    <FilesMatch "\.(jpg|jpeg|png|webp|avif|gif|svg|css|js|woff|woff2|ttf|otf)$">
        Header set Cache-Control "max-age=31536000, public, immutable"
    </FilesMatch>
    
    # HTML - pas de cache
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "max-age=0, no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires 0
    </FilesMatch>
</IfModule>

# ====================
# SÉCURITÉ
# Headers de sécurité pour améliorer le score
# ====================
<IfModule mod_headers.c>
    # Prévenir le clickjacking
    Header always set X-Frame-Options "SAMEORIGIN"
    
    # Prévenir le MIME-sniffing
    Header always set X-Content-Type-Options "nosniff"
    
    # Activer la protection XSS du navigateur
    Header always set X-XSS-Protection "1; mode=block"
    
    # Référer policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Permissions Policy
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
</IfModule>

# ====================
# OPTIMISATION IMAGES
# Servir WebP/AVIF si supporté
# ====================
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Vérifier si le navigateur accepte WebP
    RewriteCond %{HTTP_ACCEPT} image/webp
    RewriteCond %{REQUEST_FILENAME} \.(jpe?g|png)$
    RewriteCond %{REQUEST_FILENAME}.webp -f
    RewriteRule ^(.+)$ $1.webp [T=image/webp,E=accept:1,L]
    
    # Ajouter le header Vary pour le cache CDN
    <IfModule mod_headers.c>
        Header append Vary Accept env=REDIRECT_accept
    </IfModule>
</IfModule>

# ====================
# HTTP/2 Server Push (si supporté)
# Envoyer les ressources critiques automatiquement
# ====================
<IfModule mod_http2.c>
    # Activer HTTP/2
    Protocols h2 h2c http/1.1
</IfModule>

# ====================
# TYPES MIME
# Assurer que tous les types sont bien reconnus
# ====================
<IfModule mod_mime.c>
    AddType image/webp .webp
    AddType image/avif .avif
    AddType font/woff2 .woff2
    AddType application/manifest+json .webmanifest
</IfModule>

# ====================
# PROTECTION DES FICHIERS SENSIBLES
# ====================
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Bloquer l'accès aux fichiers de configuration
<FilesMatch "\.(md|json|lock)$">
    Order allow,deny
    Deny from all
</FilesMatch>
